<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pos_basket_title"
    android:background="@color/semi_background"
    android:layout_width="324dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="6dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <TextView
        android:id="@+id/basket_name"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:text="GEEKVAPE T200"
        android:fontFamily="@font/medium"
        android:textSize="14dp"
        android:paddingHorizontal="6dp"
        android:gravity="center"
        android:layout_weight="5"/>

    <TextView
        android:id="@+id/basket_count"
        android:layout_width="64.8dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:fontFamily="@font/medium"
        android:textSize="14dp"
        android:gravity="center"
        android:paddingHorizontal="6dp"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/basket_price"
        android:layout_width="97.2dp"
        android:layout_height="wrap_content"
        android:text="120,000"
        android:fontFamily="@font/medium"
        android:paddingHorizontal="6dp"
        android:textSize="14dp"
        android:gravity="center"
        android:layout_weight="3"/>

</LinearLayout>