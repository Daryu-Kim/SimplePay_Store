<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pos_basket_title"
    android:layout_width="384dp"
    android:layout_height="wrap_content"
    android:background="@color/dark_semi_background"
    android:orientation="horizontal"
    android:paddingHorizontal="6dp"
    android:paddingVertical="6dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/basket_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="5"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:paddingHorizontal="6dp"
        android:text="GEEKVAPE T200"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/basket_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.25"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:paddingHorizontal="6dp"
        android:text="1"
        android:textSize="14dp" />

    <ImageButton
        android:id="@+id/basket_add"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.6"
        android:background="@drawable/basket_add_24dp" />

    <ImageButton
        android:id="@+id/basket_remove"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.6"
        android:background="@drawable/basket_remove_24dp" />

    <TextView
        android:id="@+id/basket_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:paddingHorizontal="6dp"
        android:text="120,000"
        android:textSize="14dp" />

    <ImageButton
        android:id="@+id/basket_delete"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.6"
        android:background="@drawable/basket_delete_24dp" />

    <TextView
        android:id="@+id/basket_price_00"
        android:layout_width="1dp"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

</LinearLayout>